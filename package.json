{
  "name": "conan-setup-action",
  "version": "0.0.1",
  "description": "",
  "main": "dist/main/index.js",
  "packageManager": "npm",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx jest",
    "test": "npx jest",
    "format:check": "npx prettier --check .",
    "format:write": "npx prettier --write .",
    "lint": "npx eslint .",
    "package": "npx ncc build src/save.ts -o dist/save --minify --source-map --license licenses.txt && npx ncc build src/main.ts -o dist/main --minify --source-map --license licenses.txt",
    "all": "npm run format:write && npm run lint && npm run test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/planetmarshall/conan-setup-action.git"
  },
  "private": true,
  "engines": {
    "node": ">=21"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@github/local-action": "^2.2.1",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.15.0"
  },
  "dependencies": {
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "fast-json-stable-stringify": "^2.1.0",
    "ts-md5": "^1.3.1"
  }
}
